{% extends '::base.html.twig' %}

{% block title %}Главная{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-4 col-md-3 col-md-offset-1 content">
            <div class="news-header">
                <span>Новости</span>
            </div>
            <div class="news-list">
                <ul>
                    <li>1. Lorem ipsum dolor sit amet...</li>
                    <li>2. Lorem ipsum dolor sit amet...</li>
                    <li>3. Lorem ipsum dolor sit amet...</li>
                    <li>4. Lorem ipsum dolor sit amet...</li>
                </ul>
            </div>
        </div>
        <div class="col-sm-8 col-md-7 content">
            <div id="myCarousel" class="carousel slide slider" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                    <li data-target="#myCarousel" data-slide-to="5"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="img-responsive" src="{{ asset('img/slider/img1.jpg') }}">
                    </div>

                    <div class="item">
                        <img class="img-responsive" src="{{ asset('img/slider/img2.jpg') }}">
                    </div>

                    <div class="item">
                        <img class="img-responsive" src="{{ asset('img/slider/img3.jpg') }}">
                    </div>

                    <div class="item" >
                        <img class="img-responsive" src="{{ asset('img/slider/img7.jpg') }}">
                    </div>

                    <div class="item" >
                        <img class="img-responsive" src="{{ asset('img/slider/img5.jpg') }}">
                    </div>

                    <div class="item" >
                        <img class="img-responsive" src="{{ asset('img/slider/img6.jpg') }}">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="entity-header col-md-10 col-md-offset-1 content">
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 content">
                <span>Мероприятия</span>
            </div>
            <div class="col-xs-7 col-xs-offset-2 col-sm-9 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-7 col-lg-offset-3 content">
                <div class="entity-group-by">
                    <div class="item-menu"><a href="#">Кино</a></div>
                    <div class="item-menu"><a href="#">Спектакли</a></div>
                    <div class="item-menu"><a href="#">Концерты</a></div>
                    <div class="item-menu"><a href="#">Спорт</a></div>
                    <div class="item-menu"><a href="#">Вечеринки</a></div>
                    <div class="item-menu"><a href="#">Детям</a></div>
                    <div class="item-menu"><a href="#">Другое</a></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="events col-md-10 col-md-offset-1">
            {% for event in events %}
                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
                    <div class="event-div">
                        <img src="../img/posters/{{ event.poster }}" class=" img-responsive poster">
                        <a href="event/{{ event.id }}">{{ event.name }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="more col-md-10 col-md-offset-1">
            <a href="{{ path('events_list') }}">Ещё...</a>
        </div>
    </div>
    <div class="row">
        <div class="entity-header col-md-10 col-md-offset-1 content">
            <div class="col-xs-3 col-sm-4 col-md-3 col-lg-3 content">
                <span>Места проведения</span>
            </div>
            <div class="col-xs-9 col-sm-8 col-md-8 col-md-offset-1 col-lg-7 col-lg-offset-2 content">
                <div class="entity-group-by">
                    <div class="item-menu"><a href="#">Кинотеатры</a></div>
                    <div class="item-menu"><a href="#">Театры</a></div>
                    <div class="item-menu"><a href="#">Спорт</a></div>
                    <div class="item-menu"><a href="#">Концерты</a></div>
                    <div class="item-menu"><a href="#">Клубы</a></div>
                    <div class="item-menu"><a href="#">Другое</a></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 content news-header ">
            <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3 content">
                <span>Введите город</span>
            </div>
            <div class="col-xs-7 col-xs-offset-1 col-sm-8 col-sm-offset-1 col-md-8 col-md-offset-1 col-lg-7 col-lg-offset-2 content">
                <div class="city-search">
                    <input type="text">
                    <button type="submit">Найти</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 content">
            <table class="table places-table">
                <thead class="table-head">
                    <th></th>
                    <th>Название</th>
                    <th>Тип</th>
                    <th>Описание</th>
                    <th>Адрес</th>
                </thead>
                <tbody>
                    {% for place in places %}
                        <tr>
                            <td></td>
                            <td>{{ place.name }}</td>
                            <td>{{ place.type }}</td>
                            <td>{{ place.description }}</td>
                            <td>{{ place.address }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="more col-md-10 col-md-offset-1">
            <a href="{{ path('places_list') }}">Ещё...</a>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            //Activate Carousel
            $("#carouselExampleIndicators").carousel();
        });
    </script>

{% endblock %}
